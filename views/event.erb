<div class="row">
    <div class="col-md-8">
        <h2>
            <i class="fas fa-calendar-alt"></i>
            <%= @event[:date] %>
        </h2>
        
        <h1> <%=@event[:title] %></h1>

        <p>
            <%= @event[:description] %>
        </p>

        <h2>RSVPS</h2>

        <div class= "media">
            <i class= "fas fa-thumbs-up fa-3x"></i>
            <div class="media-body">
                <h5 class="mt=0">Brian</h5>
                I wouldnt miss it!
            </div>
        </div>

        <div class= "media">
            <i class= "fas fa-thumbs-down fa-3x"></i>
            <div class="media-body">
                <h5 class="mt=0">Ben</h5>
                Nope, I only eat kale!
            </div>
        </div>

        <div class="mt-5">
            <a href="/events/<%= @event[:id] %>/rsvps/new" class="btn btn-primary">RSVP Now!</a>
        </div>

    </div> 

    <div class= "col-md-4">
        <h3>When?</h3>
        <p> <%= @event[:date] %></p>
        
        <h3>Where?</h3>
        <p> <%= @event[:location] %></p>

        <h3>How many guests so far?</h3>
        <p> <%= @event[:date] %></p>

    </div>

</div>